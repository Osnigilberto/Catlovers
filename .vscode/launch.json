{
  // Use o IntelliSense para saber mais sobre os atributos possíveis.
  // Focalizar para exibir as descrições dos atributos existentes.
  // Para obter mais informações, acesse: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    

    // Executar o Node.js
    {
      "type": "node",
      "request": "launch",
      "name": "Iniciar o Node.js",
      "program": "${workspaceFolder}/server.js",
      "cwd": "${workspaceFolder}"
    },
    // Executar o Node.js com inspect
    {
      "type": "node",
      "request": "launch",
      "name": "Iniciar o Node.js com inspect",
      "program": "${workspaceFolder}/server.js",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["--inspect-brk"]
    },
    // Executar o Node.js com debugger
    {
      "type": "node",
      "request": "launch",
      "name": "Iniciar o Node.js com debugger",
      "program": "${workspaceFolder}/server.js",
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "restart": true
    },
    // Executar
    
    {
      "type": "chrome",
      "request": "launch",
      "name": "Iniciar o Chrome em relação a localhost",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    }
  ]
  
  
  
}